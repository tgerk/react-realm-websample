{
    "collection": "reviews",
    "database": "sample_restaurants",
    "roles": [
        {
            "name": "author",
            "apply_when": {
                "user_id": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "everyone",
            "apply_when": {},
            "read": true,
            "write": false,
            "insert": false,
            "delete": {
                "%%user.custom_fields.roles": {
                    "$contains": "editor"
                }
            },
            "search": true,
            "additional_fields": {}
        }
    ]
}
